#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int n;
	double sum;

	do {

		cout << "Введите количество элементов массива N (N > 0) : ";
		cin >> n;
		cout << endl;

	} while (n<=0);

	double* array = new double[n];
	double* array_1 = new double[n];

	cout << "Введите элементы массива : ";

	for (int i = 0; i < n; i++) {

		cin >> array[i];

	}

	for (int i = 0; i < n; i++) {

	     sum += array[i];

		array_1[i] = sum / (i + 1);

	}

	cout << "Результат : " << endl;

	for (int i = 0; i < n; i++) {
		cout << array_1[i] << " ";
	}

	cout << endl;

	system("pause");

	return 0;

}
