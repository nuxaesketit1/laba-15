#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int n, max_i = 0, min_i = 0;
	double temp, temp_1;

	do {

		cout << "Введите количество элементов массива N (N > 0) : ";
		cin >> n;
		cout << endl;

	} while (n<0);

	double* array = new double[n];

	cout << "Введите элементы массива : ";

	for (int i = 0; i < n; i++) {

		cin >> array[i];

	}

	temp = array[0];
	temp_1 = array[0];

	for (int i = 0; i < n; i++) {

		if (array[i] > temp) {

			temp = array[i];
			max_i = i;

		}
		if (array[i] < temp_1) {

			temp_1 = array[i];
			min_i = i;

		}

	}

	if (max_i > min_i) {

		for (int i = (min_i + 1); i < max_i; i++) {

			array[i] = 0;

		}

	}
	else
	{

		for (int i = (max_i + 1); i < min_i; i++) {

			array[i] = 0;

		}

	}

	cout << endl;
	cout << "Результат : " << endl;

	for (int i = 0; i < n; i++) {

		cout << array[i] << " ";

	}

	cout << endl;

	system("pause");

	return 0;

}
