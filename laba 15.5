#include <iostream>
#include <cmath>
using namespace std;

int main() {

	setlocale(0, "");

	int n;
	double temp;

	do {

		cout << "Введите количество элементов массива N (N > 0) : ";
		cin >> n;
		cout << endl;

	} while (n<0);

	double* array = new double[n];

	cout << "Введите элементы массива : ";

	for (int i = 0; i < n; i++) {

		cin >> array[i];

	}

	temp = array[0];

	if (array[n - 1] < temp) {

		for (int i = 0; i < (n - 1); i++) {

			array[i] = array[i + 1];

		}
		array[n - 1] = temp;
	}
	else {

		for (int i = 1; i < n - 1; i++) {

			if ((array[i] < temp) && (array[i + 1] > temp)) {

				for (int j = 0; j < (i + 1); j++) {

					if (j == i) {

						array[j] = temp;

					}
					else {

						array[j] = array[j + 1];

					}
				}

			}

		}
	}

	cout << endl;
	cout << "Результат : " << endl;

	for (int i = 0; i < n; i++) {

		cout << array[i] << " ";

	}

	cout << endl;

	system("pause");

	return 0;

}
